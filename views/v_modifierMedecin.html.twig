{% extends "layout.html.twig"%}
{% block content %}
    {% set nom = medecin.nom %}
    {% set prenom = medecin.prenom %}
    {% set adresse = medecin.adresse %}
    {% set tel = medecin.tel %}
    {% set departement = medecin.departement %}
	{% set specialite = medecin.specialitecomplementaire %}

    {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_label(form.nom) }}
        {{ form_widget(form.nom, {'value' : nom}) }}
        {{ form_errors(form.nom) }}


        {{ form_label(form.prenom) }}
        {{ form_widget(form.prenom, {'value' : prenom}) }}
        {{ form_errors(form.prenom) }}

        {{ form_label(form.adresse) }}
        {{ form_widget(form.adresse, {'value' : adresse}) }}
        {{ form_errors(form.adresse) }}

        {{ form_label(form.tel) }}
        {{ form_widget(form.tel, {'value' : tel}) }}
        {{ form_errors(form.tel) }}

        {{ form_label(form.departement) }}
        {{ form_widget(form.departement, {'value' : departement}) }}
        {{ form_errors(form.departement) }}

        {{ form_label(form.specialite) }}
        {{ form_widget(form.specialite, {'value' : specialite}) }}
        {{ form_errors(form.specialite) }}
		
    {{ form_end(form) }}


{% endblock %}
